{
  "name": "visualchg",
  "displayName": "VisualCHG",
  "description": "A visual editor of constraint hypergraphs",
  "version": "0.0.1",
  "publisher": "John Morris",
  "license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jmorris335/visualchg"
	},
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:chg",
    "workspaceContains:**/*.chg"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "visualchg.chgEditor",
        "displayName": "CHG Visual Editor",
        "selector": [
          { "filenamePattern": "*.chg" }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "chg",
        "aliases": ["Constraint Hypergraph", "chg"],
        "extensions": [".chg"]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chg-primary",
          "title": "VisualCHG",
          "icon": "media/drop-icon.svg"
        },
        {
          "id": "chg-outline",
          "title": "CHG Outline",
          "icon": "media/outline.svg"
        }
      ]
    },
    "views": {
      "chg-primary": [
        {
          "id": "chgOperationsView",
          "name": "Operations",
          "type": "webview"
        },
        {
          "id": "chgDetailsView",
          "name": "Details",
          "type": "webview"
        },
        {
          "id": "chgSimulateView",
          "name": "Simulate",
          "type": "webview"
        },
        {
          "id": "chgViewPanel",
          "name": "View",
          "type": "webview"
        }
      ],
      "chg-outline": [
        {
          "id": "chgOutlineView",
          "name": "Outline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
